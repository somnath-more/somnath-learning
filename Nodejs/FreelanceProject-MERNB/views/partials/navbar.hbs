<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>NavBar Component</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <!-- Ensure the nav bar is structured correctly -->
   <nav
  class="navbar navbar-expand-lg navbar-light shadow-sm py-3"
  style="background: linear-gradient(90deg, #b3c6ff, #ffffff,green);"
>
  <div class="container">
    <a class="navbar-brand d-flex align-items-center" href="#">
      <img
        src="/webapp/static/images/download.png"
        alt="Logo"
        width="40"
        height="40"
        class="rounded-circle me-2"
      />
      <span class="fw-bold" style="color: #4b6584;">Traveller Adventure</span>
    </a>

    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarSupportedContent"
      aria-controls="navbarSupportedContent"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
        {{#each data}}
        <li class="nav-item font-weight-bold">
          <a
            class="nav-link px-3 py-2 rounded text-dark {{#if this.active}}active{{/if}}"
            style="transition: background-color 0.3s ease;"
            href="{{this.url}}"
            >{{this.label}}</a
          >
        </li>
        {{/each}}
      </ul>
    </div>
  </div>
</nav>

<style>
  .nav-link:hover {
    background-color: #d6e4ff;
    color: #1a5276;
  }
  .nav-link.active {
    font-weight: bold;
    background-color: #b3c6ff;
    color: #fff;
  }
</style>

    <!-- Bootstrap JS for navbar functionality -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>